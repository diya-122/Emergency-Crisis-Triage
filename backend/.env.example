# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=emergency_triage

# LLM API Keys (Choose one or both)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# System Configuration
MAX_WORKERS=4
REQUEST_TIMEOUT=30

# Urgency Scoring Weights
WEIGHT_MEDICAL_RISK=0.35
WEIGHT_VULNERABLE_POP=0.25
WEIGHT_TIME_SENSITIVITY=0.20
WEIGHT_MESSAGE_CONFIDENCE=0.10
WEIGHT_SEVERITY=0.10

# Resource Matching Weights
WEIGHT_SUITABILITY=0.40
WEIGHT_AVAILABILITY=0.30
WEIGHT_CAPACITY=0.15
WEIGHT_DISTANCE=0.15

# AI-Enhanced Resource Matching
# Set to true to enable LLM-powered resource matching with explainable AI reasoning
# Falls back to rule-based matching if AI fails or confidence is too low
ENABLE_AI_MATCHING=false
AI_MATCHING_MIN_CONFIDENCE=0.6

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
